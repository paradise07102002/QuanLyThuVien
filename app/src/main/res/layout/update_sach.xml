<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/update_sach_back"
        android:layout_width="48dp"
        android:layout_height="26dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_back1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <ImageView
            android:id="@+id/update_sach_img"
            android:layout_marginLeft="25dp"
            android:background="@drawable/edit_image_sach"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/icon_camera"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đầu sách" />

            <Spinner
                android:id="@+id/update_sach_spinner"
                android:layout_width="195dp"
                android:layout_height="45dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_edittext2" />
        </LinearLayout>
    </LinearLayout>
    <EditText
        android:id="@+id/update_sach_name"
        android:background="@drawable/edit_edittext2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:hint="Tên sách"
        android:paddingLeft="10dp"
        android:layout_width="315dp"
        android:layout_height="45dp"/>
    <EditText
        android:id="@+id/update_sach_tg"
        android:background="@drawable/edit_edittext2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:hint="Tên tác giả"
        android:paddingLeft="10dp"
        android:layout_width="315dp"
        android:layout_height="45dp"/>
    <EditText
        android:id="@+id/update_sach_nhaxb"
        android:background="@drawable/edit_edittext2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:hint="Nhà xuất bản"
        android:paddingLeft="10dp"
        android:layout_width="315dp"
        android:layout_height="45dp"/>
    <EditText
        android:id="@+id/update_sach_namxb"
        android:background="@drawable/edit_edittext2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:hint="Năm xuất bản"
        android:paddingLeft="10dp"
        android:layout_width="315dp"
        android:layout_height="45dp"
        android:inputType="number"/>
    <EditText
        android:id="@+id/update_sach_mo_ta"
        android:background="@drawable/edit_edittext2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:paddingBottom="40dp"
        android:hint="Mô tả sách"
        android:paddingLeft="10dp"
        android:layout_width="315dp"
        android:layout_height="100dp"
        android:inputType="text"/>
    <Button
        android:id="@+id/update_sach_btn"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:text="Cập nhật"
        app:cornerRadius="7dp" />
</LinearLayout>