<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5F9EA0"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/edit_email_back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:src="@drawable/icon_back1"/>
    <LinearLayout
        android:background="@drawable/edit_edittext3"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_width="345dp"
        android:layout_height="500dp"
        android:orientation="vertical">


        <LinearLayout
            android:background="@drawable/edit_edittext4"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="2dp"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icom_email"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <EditText
                android:paddingLeft="10dp"
                android:background="@drawable/edit_edittext4"
                android:id="@+id/edt_edit_email"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="265dp"
                android:layout_height="40dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_update_email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="15dp"
            android:text="Cập nhật"
            app:cornerRadius="7dp" />
    </LinearLayout>
</LinearLayout>