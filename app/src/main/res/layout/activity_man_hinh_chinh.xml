<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/hdrawer_layout"
    tools:context=".ManHinhChinh">

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <androidx.appcompat.widget.Toolbar
          android:id="@+id/htoolbar"
          android:background="#5F9EA0"
          android:theme="@style/ThemeOverlay.AppCompat.Light"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize">
        <LinearLayout
            android:background="@drawable/edit_search"

            android:layout_width="325dp"
            android:layout_height="wrap_content">
          <EditText
              android:id="@+id/edt_tim_kiem"
              android:background="@drawable/edit_search2"
              android:hint="Tìm kiếm sách"
              android:textSize="16dp"
              android:textColorHint="@color/black"
              android:layout_marginLeft="5dp"
              android:layout_marginTop="8dp"
              android:paddingRight="10dp"
              android:paddingLeft="15dp"
              android:layout_width="265dp"
              android:layout_height="40dp"/>
          <ImageView
              android:id="@+id/img_tim_kiem"
              android:layout_marginTop="5dp"
              android:src="@drawable/icon_search"
              android:layout_width="48dp"
              android:layout_height="48dp"/>
        </LinearLayout>
      </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:id="@+id/hcontent_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <com.google.android.material.bottomnavigation.BottomNavigationView
          app:menu="@menu/menu_bottom_nav"
          android:background="#5F9EA0"
          android:id="@+id/bottom_nav"
          app:itemIconTint="#FFFF00"
          app:itemTextColor="@color/white"
          android:layout_alignParentBottom="true"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <TextView
            android:id="@+id/show_new_message"
            android:background="@drawable/badge_shape"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="210dp"
            android:text="0"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
      </com.google.android.material.bottomnavigation.BottomNavigationView>
    </RelativeLayout>
  </LinearLayout>
  <com.google.android.material.navigation.NavigationView
      android:layout_gravity="start"
      app:headerLayout="@layout/layout_header_nav"
      app:menu="@menu/menu_nav"
      android:id="@+id/hnavigation_view"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"/>
  </androidx.drawerlayout.widget.DrawerLayout>