<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5F9EA0"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tk_back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:src="@drawable/icon_back1"/>

    <LinearLayout
        android:background="@drawable/edit_edittext3"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:layout_width="345dp"
        android:layout_height="500dp"
        android:orientation="vertical">

        <FrameLayout
            android:background="@drawable/edit_edittext4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="9dp"
            android:layout_width="325dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/tk_avartar"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_avartar" />

            <ImageView
                android:id="@+id/tk_add_avartar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="65dp"
                app:srcCompat="@drawable/icon_camera" />

            <TextView
                android:id="@+id/tk_username"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username" />
            <TextView
                android:id="@+id/tk_rank"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="55dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vip100" />
        </FrameLayout>
        <LinearLayout
            android:background="@drawable/edit_edittext4"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="2dp"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icon_user3"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <TextView
                android:id="@+id/tk_fullname"
                android:text="Fullname"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                android:layout_width="215dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/tk_edit_fullname"
                android:src="@drawable/icon_edit_mini"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/edit_edittext4"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icom_email"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <TextView
                android:id="@+id/tk_email"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                android:layout_width="215dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/tk_edit_email"
                android:src="@drawable/icon_edit_mini"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/edit_edittext4"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/icon_phone"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
            <TextView
                android:id="@+id/tk_phone"
                android:text="Phone"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="18dp"
                android:layout_width="215dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/tk_edit_phone"
                android:src="@drawable/icon_edit_mini"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>