<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/dmds_image"
        android:layout_width="48dp"
        android:layout_height="100dp"
        android:src="@drawable/icon_book_shelf"/>
    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dmds1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Mã đầu sách: "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_dmds2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tên đầu sách: "
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="115dp"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dmds3"
            android:layout_marginTop="25dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã sách" />

        <TextView
            android:id="@+id/tv_dmds4"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sách" />
    </LinearLayout>

    <ImageView
        android:id="@+id/delete_ds"
        android:layout_marginTop="25dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/icon_delete" />
    <ImageView
        android:id="@+id/next_update_ds"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/icon_edit" />
</LinearLayout>